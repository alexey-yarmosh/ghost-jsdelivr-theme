<footer class="pagination">
	{{#if prev}}
		<a class="newer-posts" href="{{page_url prev}}"><i class="fa fa-chevron-left"></i></a>
	{{/if}}

	<span class="page-number">Page {{ page }} of {{ pages }}</span>
	{{#if next}}
		<a class="older-posts" href="{{page_url next}}"><i class="fa fa-chevron-right"></i></a>
	{{/if}}
</footer>
